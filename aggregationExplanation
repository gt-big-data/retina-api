    match = {'$match': {'timestamp': {'$gte': time.time()-24*3600}, 'keywords': term}}
-> articles
    project = {'$unwind': '$keywords'}
-> {'keywords': 'obama'}, {'keywords': 'White house'}, ...
    group = {'$group': {'_id': '$keywords', 'total': {'$sum': 1} }}
-> {'_id': 'Obama', 'total': 17}, ...
    sort = {'$sort': {'total': -1}}

    limit  = {'$limit': 10}

    query_result = db.qdoc.aggregate([match, project, group, sort, limit])['result']